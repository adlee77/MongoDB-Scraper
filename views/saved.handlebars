<div class="container">
    <div class="row">
        <div class="col text-center">
            <h1>NPR Music News Scraper</h1>
        </div>
    </div>
    <div class="row">
        <div class="col text-center">
            <button type="button" id="generate" class="btn btn-primary">Scrape New Articles</button>
        </div>
    </div>
    <br>

{{#each npr}}
<div id="articles" class="card">
        <div class="row">
            <div class="col-4">
                <img src="{{image}}" alt="News Image">
            </div>
            <div class="col-4">
                <a href="{{link}}">
                    <h3>{{title}}</h3>
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <p class="card-text">{{summary}}</p>
            </div>
        </div>
    </div>
        <div class="row">
            <div class="col text-right">
                <button type="button" data-id="{{id}}" class="btn btn-primary delete">Delete</button>
                <button type="button" news-title="{{title}}" data-id="{{id}}" class="btn btn-primary comment" data-toggle="modal" data-target="#noteModal">Leave Note</button>
                <button type="button" news-title="{{title}}" data-id="{{id}}" class="btn btn-primary view" data-toggle="modal" data-target="#seeNoteModal">See Notes</button>
            </div>
        </div>
{{/each}}

{{!-- Modal for leaving a note --}}
<div class="modal" id="noteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <textarea class="form-control noteSubject"></textarea>
                <textarea class="form-control noteBody"></textarea>
            </div>
            <div class="modal-footer">
                <p class="modal-title-id"></p>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary saveNote">Save changes</button>
            </div>
        </div>
    </div>
</div>

{{!-- Modal for seeing notes --}}
<div class="modal" id="seeNoteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <textarea class="form-control noteSubject"></textarea>
                <textarea class="form-control noteBody"></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary saveNote">Save changes</button>
            </div>
        </div>
    </div>
</div>